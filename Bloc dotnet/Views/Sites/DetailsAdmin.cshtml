@model Site

@{
    ViewData["Title"] = "Détails de " + Model.Nom;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <h2>Détails de @Model.Nom</h2>
        <br />
        <div class="form-group">
            <label asp-for="Nom" class="control-label"></label>
            <input asp-for="Nom" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Ville" class="control-label"></label>
            <input asp-for="Ville" class="form-control" readonly />
        </div>
        <br />
        <div class="form-group">
            <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model.IdSite">Editer</a>
            <a class="btn btn-outline-danger float-end" asp-action="Index">Retour à la liste des sites</a>
        </div>
    </div>
</div>