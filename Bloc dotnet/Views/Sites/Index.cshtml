@model IEnumerable<Site>;
@{
    ViewData["Title"] = "Liste des sites";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-10 offset-1">
        <h2>Liste des sites</h2>
        <hr />
        <table class="table text-center">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.IdSite)</th>
                    <th>@Html.DisplayNameFor(model => model.Nom)</th>
                    <th>@Html.DisplayNameFor(model => model.Ville)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.IdSite</td>
                        <td class="align-middle">@item.Nom</td>
                        <td class="align-middle">@item.Ville</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-info" asp-action="DetailsAdmin" asp-route-id="@item.IdSite">Détails</a>
                            <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.IdSite">Editer</a>
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.IdSite">Supprimer</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-outline-success float-end" asp-action="Create">Ajouter un site</a>
    </div>
</div>




