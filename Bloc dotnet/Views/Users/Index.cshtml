@model IEnumerable<User>;
@{
    ViewData["Title"] = "Liste des administrateurs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-10 offset-1">
        <h2>Liste des administrateurs</h2>
        <hr />
        <table class="table text-center">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.IdUser)</th>
                    <th>@Html.DisplayNameFor(model => model.Login)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.IdUser</td>
                        <td class="align-middle">@item.Login</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.IdUser">Détails</a>
                            <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.IdUser">Editer</a>
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.IdUser">Supprimer</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-outline-success float-end" asp-action="Create">Ajouter un administrateur</a>
    </div>
</div>




