@model Service

@{
    ViewData["Title"] = "Détails de " + Model.Nom;
}

<div class="row">
    <div class="col-md-8 offset-2">
        <h2>Détails de @Model.Nom</h2>
        <br />
        <div class="form-group">
            <label asp-for="Nom" class="control-label"></label>
            <input asp-for="Nom" class="form-control" readonly />
        </div>
        <br />
        <div class="form-group">
            <a class="btn btn-outline-danger float-end" asp-controller="Salaries" asp-action="Index">Retour à la liste des salariés</a>
        </div>
    </div>
</div>