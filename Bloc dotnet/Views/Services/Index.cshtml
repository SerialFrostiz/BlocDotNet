@model IEnumerable<Service>;
@{
    ViewData["Title"] = "Liste des services";
}

<div class="row">
    <div class="col-md-10 offset-1">
        <h2>Liste des Services</h2>
        <hr />
        <table class="table text-center">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.IdService)</th>
                    <th>@Html.DisplayNameFor(model => model.Nom)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.IdService</td>
                        <td class="align-middle">@item.Nom</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.IdService">Détails</a>
                            <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.IdService">Editer</a>
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.IdService">Supprimer</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-outline-success float-end" asp-action="Create">Ajouter un service</a>
    </div>
</div>




